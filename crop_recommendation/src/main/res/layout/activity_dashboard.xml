<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/cl_black"

    tools:context=".Dashboard">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="10dp"

        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Hello Pranav"
            android:textColor="@color/cl_green"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Your personalized farming adviser for everything you need for farming."
            android:textColor="@color/cl_faint_green"
            android:textSize="10sp" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Card 1 -->
                <LinearLayout
                    android:id="@+id/cropCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/edittext_background"

                    app:cardCornerRadius="15dp">

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <!-- Image -->
                        <com.google.android.material.imageview.ShapeableImageView

                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/white"
                            android:src="@drawable/farmer_bg"
                            android:scaleType="fitXY"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Title -->
                            <TextView

                                android:layout_width="300dp"
                                android:layout_height="wrap_content"

                                android:textColor="@color/secondary_white"
                                android:text="Check crop feasibility"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <!-- Subtitle -->
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="Get suggestions from us, to choose best crop for your field."
                                android:textColor="@android:color/darker_gray"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <!-- Card 2 -->
                <LinearLayout
                    android:id="@+id/helpCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/edittext_background"

                    app:cardCornerRadius="15dp">

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <!-- Image -->
                        <com.google.android.material.imageview.ShapeableImageView

                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/white"
                            android:src="@drawable/farmer_bg"
                            android:scaleType="fitXY"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Title -->
                            <TextView

                                android:layout_width="300dp"
                                android:layout_height="wrap_content"

                                android:textColor="@color/secondary_white"
                                android:text="Help your co-farmers"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <!-- Subtitle -->
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="Help them by answering questions and win exciting goodies."
                                android:textColor="@android:color/darker_gray"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <!-- Card 3 -->
                <LinearLayout
                    android:id="@+id/reportCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/edittext_background"

                    app:cardCornerRadius="15dp">

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <!-- Image -->
                        <com.google.android.material.imageview.ShapeableImageView

                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/white"
                            android:src="@drawable/farmer_bg"
                            android:scaleType="fitXY"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Title -->
                            <TextView

                                android:layout_width="300dp"
                                android:layout_height="wrap_content"

                                android:textColor="@color/secondary_white"
                                android:text="Reports"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <!-- Subtitle -->
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="Check reports of your asked questions."
                                android:textColor="@android:color/darker_gray"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

